        <!-- Right side column. Contains the navbar and content of the page -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Dashboard
                    <small>Control panel</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li class="active">Dashboard</li>
                </ol>
            </section>
            <div style="padding: 20px; background-color: white;">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Chỉnh sửa Laptop</h2>
                    </div>
                </div>
                <form action="/products/laptop/edit-laptop" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="id">ID: </label>
                        <input required minlength="1" maxlength="100" type="text" name="id" class="form-control"
                            value="<%= p._id %>" readonly>
                    </div>
                    <div class="form-group">
                        <label for="name">Tên sản phẩm: </label>
                        <input required minlength="1" maxlength="200" type="text" name="name" class="form-control"
                            value="<%= p.name %>">
                    </div>
                    <div class="form-group">
                        <label for="price">Giá: </label>
                        <input required min="0" max="1000000000" type="number" name="price" class="form-control"
                            value="<%= p.price %>">
                    </div>
                    <div class="form-group">
                        <label for="batteryLife">Thời gian pin: </label>
                        <input required minlength="1" maxlength="100" type="text" name="batteryLife"
                            class="form-control" value="<%= p.batteryLife %>">
                    </div>
                    <div class="form-group">
                        <label for="graphicCardMemory">Bộ nhớ card đồ họa: </label>
                        <input required minlength="1" maxlength="100" type="text" name="graphicCardMemory"
                            class="form-control" value="<%= p.graphicCardMemory %>">
                    </div>
                    <div class="form-group">
                        <label for="brand">Thương hiệu: </label>
                        <select style="margin-left: 15px;" name="brand">
                            <% brands.forEach(b => { %>
                                <% if(b.name == p.brand.name){ %>
                                    <option selected value="<%= b._id %>"><%= b.name %></option>
                                <% }else{ %>
                                    <option value="<%= b._id %>"><%= b.name %></option>
                                <% } %>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="camera">Camera: </label>
                        <input required minlength="1" maxlength="100" type="text" name="camera" class="form-control"
                            value="<%= p.camera %>">
                    </div>
                    <div class="form-group">
                        <label for="graphicCard">Card đồ họa: </label>
                        <input required minlength="1" maxlength="100" type="text" name="graphicCard"
                            class="form-control" value="<%= p.graphicCard %>">
                    </div>
                    <div class="form-group">
                        <label for="CPU">CPU: </label>
                        <input required minlength="1" maxlength="100" type="text" name="CPU" class="form-control"
                            value="<%= p.CPU %>">
                    </div>
                    <div class="form-group">
                        <label for="CPUSpeed">Tốc độ CPU: </label>
                        <input required minlength="1" maxlength="100" type="text" name="CPUSpeed" class="form-control"
                            value="<%= p.CPUSpeed %>">
                    </div>
                    <div class="form-group">
                        <label for="diskSpace">Dung lượng ổ cứng: </label>
                        <input required minlength="1" maxlength="100" type="text" name="diskSpace" class="form-control"
                            value="<%= p.diskSpace %>">
                    </div>
                    <div class="form-group">
                        <label for="hardwareType">Loại ổ cứng: </label>
                        <input required minlength="1" maxlength="100" type="text" name="hardwareType"
                            class="form-control" value="<%= p.hardwareType %>">
                    </div>
                    <div class="form-group">
                        <label for="RAM">RAM: </label>
                        <input required minlength="1" maxlength="100" type="text" name="RAM" class="form-control"
                            value="<%= p.RAM %>">
                    </div>
                    <div class="form-group">
                        <label for="resolution">Độ phân giải: </label>
                        <input required minlength="1" maxlength="100" type="text" name="resolution" class="form-control"
                            value="<%= p.resolution %>">
                    </div>
                    <div class="form-group">
                        <label for="OS">Hệ điều hành: </label>
                        <input required minlength="1" maxlength="100" type="text" name="OS" class="form-control"
                            value="<%= p.OS %>">
                    </div>
                    <div class="form-group">
                        <label for="description">Mô tả sản phẩm</label>
                        <textarea class="form-control" rows="5" name="description"
                            required><%= p.description %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="image">Ảnh sản phẩm (Mới): </label>
                        <input type="file" name="image" id="image" class="form-control">
                        <img id="showImg" style="display: none; margin-top: 10px;" width="150" height="150">
                    </div>
                    <div class="form-group">
                        <label for="imageOld">Ảnh sản phẩm (Cũ): </label>
                        <input required type="text" class="d-none form-control" name="imageOld" value="<%= p.image %>">
                        <img src="http://localhost:4000/images/<%= p.image %>" style="margin-top: 10px;" width="150" height="150">
                    </div>
                    <div class="form-group">
                        <label for="quantity">Số lượng tồn kho: </label>
                        <input required type="number" name="quantity" class="form-control" value="<%= p.quantity %>">
                    </div>
                    <button type="submit" class="btn btn-primary text-right" style="margin-top: 10px;">Sửa</button>
                </form>
            </div>
        </div><!-- /.content-wrapper -->
        </div><!-- ./wrapper -->
        <script>
            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#showImg').attr('src', e.target.result);
                        document.getElementById('showImg').style.display = 'block';
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }
            function formatPrice(price) {
                return price.toLocaleString();
            }
            $('#image').change(function () {
                readURL(this);
            });
        </script>
    <script src="../../../static/js/app.js" type="text/javascript"></script>
    <script src="../../../static/js/demo.js" type="text/javascript"></script>
</body>

</html>